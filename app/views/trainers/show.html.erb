<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% @trainer.pokemons.each do |pokemon| %>
	<% if pokemon.health<=0 %>
		<% if current_trainer.id == @trainer.id %>
			<li><%= pokemon.name %>, Level <%= pokemon.level %>, Health <%= pokemon.health %>, <%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %> <%= button_to "Heal!", heal_path(id: pokemon), :class => "button medium", :method => :patch %> </li>
		<% end %>
	<% else %>
		<% if current_trainer.id == @trainer.id %>
			<li><%= pokemon.name %>, Level <%= pokemon.level %>, Health <%= pokemon.health %>, <%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %> <%= button_to "Heal!", heal_path(id: pokemon), :class => "button medium", :method => :patch %> </li>
		<% else %>
			<li><%= pokemon.name %>, Level <%= pokemon.level %>, Health <%= pokemon.health %>, <%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %></li>
		<% end %>
	<% end %>
<% end %>
<p><%= button_to "New Pokemon!", new_path, :class => "button medium", :method => :get if @trainer.id == current_trainer.id%></p>